#!/bin/sh

sep=" | "

while :; do
	mem=" $(free -h | awk '/^Mem:/ {print $3}' | sed "s/Gi/G/g")"
	temp=" $(sensors | awk '/^Tdie/ {print $2}' | sed "s/+//")"
	vol=" $(pamixer --get-volume-human)"
	date=" $(date '+%b %d (%a)')"
	time=" $(date '+%I:%M %p')"
	xsetroot -name " ${mem}${sep}${temp}${sep}${vol}${sep}${date}${sep}${time}"
    sleep 30
done
