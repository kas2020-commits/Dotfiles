#!/bin/sh

file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"

cd "$dir" || exit

textype() { \
	command="pdflatex"
	$command --output-directory="$dir" "$base" &&
		rm "${base}".log &&
		rm "${base}".aux &&
		rm "${base}".out
	}

case "$file" in
	*\.tex) textype "$file" ;;
	*\.py) python "$file" ;;
	*\.m) octave "$file" ;;
	*\.R) R < "$file" --no-save ;;
esac

