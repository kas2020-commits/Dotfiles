# basic binds
super + Return
    $TERMINAL

super + m
    $TERMINAL -e cmus

super + r
    $TERMINAL -e $FILE

super + shift + w
    $BROWSER

super + p
	rofi -show drun

ctrl + alt + l
    $HOME/.config/i3lock/beut.sh

Print
	flameshot full --path ~/Pictures/Screenshots
    # scrot '%Y%m%d-%T.png' -e 'mv $f ~/Pictures/Screenshots/'

super + Insert
    clipmenu -i -p "Clipboard" -l 20

super + shift + y
    youtube.sh

ctrl + alt + Delete
    power-management.sh

# Audiokeys
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle; refreshbar.sh

XF86Audio{Raise,Lower}Volume
    pamixer -{i,d} 5; refreshbar.sh
	# pactl set-sink-volume 0 {+,-}5%; refreshbar.sh

XF86Audio{Play,Pause,Next,Prev}
    playerctl {play-pause,play-pause,next,previous}

# Brightness controls
XF86MonBrightnessUp
    sudo /usr/local/bin/brightness/Bright_Up.sh

XF86MonBrightnessDown
    sudo /usr/local/bin/brightness/Bright_Down.sh
